{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://jaal.fi/schemas/animation.json",
  "title": "JAAL 1.1 animation",
  "description": "Student's actions",
  "type": "object",
  "properties": {
    "simulationStart": {
      "description": "A timestamp: when the exercise is loaded and the JAAL recorder begins recording. A time stamp in ISO 8601 format: YYYY-MM-DDTHH:mm:ss.sssZ",
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}.[0-9]{3}Z"
    }
  },
  "required": ["simulationStart"]
}
